{
    "manifest_version": 2,
    "content_scripts": [{
        "js":               ["bbo.js"],
        "css":              ["bbo.css"],
        "matches":          ["*://*.steamcommunity.com/market/listings/*"],
        "run_at": "document_start"
    }],
    "permissions": [
        "*://*.steamcommunity.com/market/listings/*"
    ],
    "icons": { "16": "icons/16logo.png",
               "48": "icons/48logo.png",
              "128": "icons/128logo.png" },
    "description":  "Improves Steam Community Market Buy Orders (extended listings, 'hot swap' currencies)",
    "name":         "Better Buy Orders",
    "short_name":   "BBO",
    "version":      "1.6"
}
